{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homepage') }}
{% endblock %}

{% block body %}
    <div class="row mt-xl-5 mt-4 px-2 px-xl-0 mx-0">
        <div class="offset-xl-2 col-xl-8 col-12">
            <div class="alert alert-success" id="success_msg"></div>
            <form method="post" id="challenge_form">
                <div class="form-group my-2">
                    <div>
                        <label class="challenge-label" for="input_name">Full name</label>
                    </div>
                    <div>
                        <input class="challenge-textfield" type="text" name="name" id="input_name" />
                    </div>
                </div>
                <div class="form-group my-2">
                    <div>
                        <label class="challenge-label" for="input_email">Email</label>
                    </div>
                    <div>
                        <input class="challenge-textfield" type="text" name="email" id="input_email" />
                    </div>
                </div>
                <div class="form-group my-2">
                    <div>
                        <label class="challenge-label" for="input_country">Country</label>
                    </div>
                    <div>
                        <input class="challenge-textfield" type="text" name="country" id="input_country" />
                    </div>
                </div>
                <button class="mt-2" id="challenge_submit" type="button">SUBMIT</button>
            </form>
            <div class="mt-2">
                <div class="alert alert-warning hide" id="warning_msg">Wait a moment please...</div>
                <div class="alert alert-danger" id="error_msg"></div>
            </div>
        </div>
    </div>

{% endblock %}